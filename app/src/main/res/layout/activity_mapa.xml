<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="272dp" tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <fragment
                android:id="@+id/mapa"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />


            <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/custom_rectangle2">


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBuscar"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:padding="6dp"
                            android:text=""
                            app:icon="@android:drawable/ic_media_play"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="22dp" />

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/inicia"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical|center_horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/alerta_label"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtDistancia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:inputType="number"
                                android:text="300" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:text="@string/meters_short"
                            android:textColor="?attr/colorOnSurface" />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">

                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:gravity="center_horizontal"
                                android:text="@string/current_distance"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurface" />
                        <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/txtDireccion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="center"
                                android:textColor="?attr/colorOnSurface" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linstart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="67dp"
                    android:layout_marginEnd="80dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/custom_rectangle2"
                    android:gravity="center_vertical">


                <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtaddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical|start"
                        android:maxLines="3"
                        android:minLines="2"
                        android:ellipsize="end"
                        android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEdit"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:contentDescription="@string/modificanombre"
                        android:minWidth="36dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:text=""
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconPadding="0dp"
                        app:iconSize="18dp" />

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClose"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:contentDescription="@string/close"
                        android:minWidth="36dp"
                        android:minHeight="36dp"
                        android:padding="4dp"
                        android:text=""
                        app:icon="@android:drawable/ic_menu_close_clear_cancel"
                        app:iconPadding="0dp"
                        app:iconSize="18dp" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
